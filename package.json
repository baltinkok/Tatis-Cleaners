{
  "name": "tatis-cleaners",
  "version": "1.0.0",
  "description": "Tati's Cleaners - Professional Cleaning Services Platform",
  "scripts": {
    "install-frontend": "cd frontend && yarn install",
    "install-backend": "cd backend && pip install -r requirements.txt",
    "build-frontend": "cd frontend && yarn build",
    "start-frontend": "cd frontend && serve -s build -p $PORT",
    "start-backend": "cd backend && uvicorn server:app --host 0.0.0.0 --port $PORT",
    "build": "yarn install-frontend && yarn build-frontend",
    "start": "yarn start-frontend"
  },
  "workspaces": [
    "frontend"
  ],
  "devDependencies": {
    "serve": "^14.2.0"
  }
}